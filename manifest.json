{
    "name": "Tab Sorter",
    "description": "Sort your tabs alphabetically with just the click of a button",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
      "service_worker": "background.js"
    },
    "permissions": ["storage", "scripting", "tabs"], 
    "action": {
        "default_popup": "tabSorter.html",
        "default_icon": {
            "16": "/images/tabsFavicon.png",
            "32": "/images/tabsFavicon.png",
            "48": "/images/tabsFavicon.png",
            "128": "/images/tabsFavicon.png"
          }
    },
    "icons": {
        "16": "/images/tabsFavicon.png",
        "32": "/images/tabsFavicon.png",
        "48": "/images/tabsFavicon.png",
        "128": "/images/tabsFavicon.png"
      }
  }

 